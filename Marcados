/home/soul/Downloads/.config

sudo apt-get install libncurses5

sudo apt install libssl-dev

sudo apt-get install bison

sudo apt-get install flex

tar -xvf linux-4.17.17.tar.xz -C /usr/src/

cd /usr/src/

ln -s linux-4.17.17 linux

cd linux

make menuconfig ou make localmodconfig

vim.tiny /usr/src/linux/Makefile

make bzImage

make modules

make modules_install

make install

cd /boot

ls /lib/modules/

mkinitramfs -o initrd.img-4.12(use o tab para completar) (nome do kernel)

update-grub

reboot

cd /boot
rm  vmlinuz-4.17.17exp1_v0 initrd.img-4.17.17exp1_v0 System.map-4.17.17exp1_v0 config-4.17.17exp1_v0

cd /lib/modules
rm -rf 4.17.17exp1_v0

cd /var/lib/initramfs-tools/
rm 4.17.17exp1_v0

update-grub

reboot

cd /usr/src/

rm -r linux linux-4.


